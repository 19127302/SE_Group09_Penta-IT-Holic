<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_purple"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.QuizFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/form_Quiz"
        android:layout_width="443dp"
        android:layout_height="384dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/questionbox"
        android:layout_width="382dp"
        android:layout_height="253dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/quizbox"
        app:layout_constraintBottom_toTopOf="@+id/form_Quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/quizquestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="question"
        android:textSize="19sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/questionbox"
        app:layout_constraintEnd_toEndOf="@+id/questionbox"
        app:layout_constraintStart_toStartOf="@+id/questionbox"
        app:layout_constraintTop_toTopOf="@+id/questionbox" />

    <Button
        android:id="@+id/Option1"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="220dp"
        android:text="Option1"
        android:textColor="@color/black"
        android:background="@drawable/button_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/option3"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="100dp"
        android:text="Option3"
        android:textColor="@color/black"
        android:background="@drawable/button_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/option4"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        android:text="Option4"
        android:textColor="@color/black"
        android:background="@drawable/button_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/logo_RegisteredHomepage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome_RegisteredHomepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/droid_sans_bold"
        android:text="welcome"
        android:textColor="@color/app_base1"
        app:layout_constraintBottom_toTopOf="@+id/username_RegisteredHomepage"
        app:layout_constraintStart_toEndOf="@+id/logo_RegisteredHomepage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_RegisteredHomepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/droid_sans_bold"
        android:textColor="@color/app_base1"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/questionbox"
        app:layout_constraintStart_toStartOf="@+id/logo_RegisteredHomepage"
        tools:text="Pham Doan Trinh" />

    <Button
        android:id="@+id/option2"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="220dp"
        android:text="Option2"
        android:textColor="@color/black"
        android:background="@drawable/button_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/back"
        android:layout_width="160dp"
        android:layout_height="49dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="30dp"
        android:text="back"
        android:backgroundTint="@color/app_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/next"
        android:layout_width="160dp"
        android:layout_height="49dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:text="next exercise"
        android:backgroundTint="@color/app_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/answertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="Answer"
        android:textColor="@color/black"
        android:textSize="10pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/form_Quiz" />
    "
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="417dp" />

</androidx.constraintlayout.widget.ConstraintLayout>